<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_management_hidden">
            <field name="name">Module Management</field>
            <field name="sequence">10</field>
            <field name="visible" eval="0" />
        </record>

        <record model="res.groups" id="group_module_management_company">
            <field name="name">Company</field>
            <field name="category_id" ref="module_management.module_management_hidden"/>
        </record>

        <record model="res.groups" id="group_module_management_inventory">
            <field name="name">Inventory</field>
            <field name="category_id" ref="module_management.module_management_hidden"/>
        </record>

        <record model="res.groups" id="group_module_management_product">
            <field name="name">Product</field>
            <field name="category_id" ref="module_management.module_management_hidden"/>
            <field name="implied_ids" eval="[(4, ref('uom.group_uom'))]"/>
        </record>

        <!-- Region for records rule    -->
        <record id="product.product_comp_rule" model="ir.rule">
            <field name="domain_force"> [('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[
            (4, ref('module_management.group_module_management_company')),
            (4, ref('module_management.group_module_management_inventory')),
            (4, ref('module_management.group_module_management_product')),
            ]"/>
        </record>
    </data>
</odoo>
