<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Region for records rule    -->
        <record id="product.product_comp_rule" model="ir.rule">
            <field name="domain_force"> [('company_id', 'in', user.company_ids.ids)]</field>
            <field name="groups" eval="[
            (4, ref('module_management.group_module_management_company')),
            (4, ref('module_management.group_module_management_inventory')),
            (4, ref('module_management.group_module_management_product')),
            ]"/>
        </record>

        <record id="product.product_comp_rule" model="ir.rule">
            <field name="name" >Product multi-company</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="global" eval="True"/>
            <field name="domain_force"> ['|', ('company_id', 'in', company_ids), ('company_id', 'in', [1,2])]</field>
        </record>

        <record id="crm_rule_user" model="ir.rule">
            <field name="name">User Lead</field>
            <field ref="crm.model_crm_lead" name="model_id"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[
                (5, 0, 0),
                (4, ref('module_management.group_module_management_crm_user'))
            ]"/>
        </record>

        <record id="crm.crm_rule_all_lead" model="ir.rule">
            <field name="name">All Leads</field>
            <field ref="crm.model_crm_lead" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[
                (5, 0, 0),
                (4, ref('module_management.group_module_management_crm_admin'))
            ]"/>
        </record>

        <record id="company_rule_user" model="ir.rule">
            <field name="name">Company Access User Rule</field>
            <field ref="crm.model_res_users" name="model_id"/>
            <field name="domain_force">[('id', 'not in', [1, 2])]</field>
            <field name="groups" eval="[
                (4, ref('module_management.group_module_management_company'))
            ]"/>
        </record>

        <record id="admin_rule_user" model="ir.rule">
            <field name="name">Admin Access User Rule</field>
            <field ref="crm.model_res_users" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[
                (4, ref('base.group_system'))
            ]"/>
        </record>

        <record id="user_rule_survey" model="ir.rule">
            <field name="name">User Access Survey Rule</field>
            <field ref="survey.model_survey_survey" name="model_id"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
        </record>

        <!--  Elearning       -->
        <record id="user_rule_slide_channel" model="ir.rule">
            <field name="name">User Access Slide Channel</field>
            <field ref="website_slides.model_slide_channel" name="model_id"/>
            <field name="domain_force">['|', ('company_id', 'in', user.company_ids.ids), ('company_id', '=', False)]</field>
        </record>

        <record id="user_rule_slide_slide" model="ir.rule">
            <field name="name">User Access Slide Slide</field>
            <field ref="website_slides.model_slide_slide" name="model_id"/>
            <field name="domain_force">['|', ('company_id', 'in', user.company_ids.ids), ('company_id', '=', False)]</field>
        </record>

        <record id="user_rule_slide_question" model="ir.rule">
            <field name="name">User Access Slide Question</field>
            <field ref="website_slides.model_slide_question" name="model_id"/>
            <field name="domain_force">['|', ('company_id', 'in', user.company_ids.ids), ('company_id', '=', False)]</field>
        </record>

        <record id="user_rule_slide_tag" model="ir.rule">
            <field name="name">User Access Slide Tag</field>
            <field ref="website_slides.model_slide_tag" name="model_id"/>
            <field name="domain_force">['|', ('company_id', 'in', user.company_ids.ids), ('company_id', '=', False)]</field>
        </record>
    </data>
</odoo>
