<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ADD MENU -->
        <menuitem id="menu_product" name="Products" sequence="10" groups="module_management.group_module_management_product"/>
        <menuitem id="menu_product_variant" name="Product Variants" action="stock.stock_product_normal_action"
            parent="module_management.menu_product" sequence="20"/>

        <record id="module_management_inherit_view_stock_product_tree" model="ir.ui.view">
            <field name="name">module.management.product.stock.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="decoration-danger">company_id in [1, 2]</attribute>
                </tree>
            </field>
        </record>
    </data>
</odoo>
