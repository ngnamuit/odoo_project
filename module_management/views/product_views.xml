<odoo>
    <data>
        <!-- ADD MENU -->
        <menuitem id="menu_product" name="Products" sequence="10" groups="module_management.group_module_management_product"/>
        <menuitem id="menu_product_variant" name="Product" action="stock.product_template_action_product"
            parent="module_management.menu_product" sequence="20"/>


        <record id="module_management_product_template_form_view" model="ir.ui.view">
            <field name="name">module.management.product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="company_id" />
                </xpath>
            </field>
        </record>


        <record id="module_management_inherit_view_stock_product_tree" model="ir.ui.view">
            <field name="name">module.management.product.stock.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="decoration-danger">company_id in [1, 2]</attribute>
                </tree>
            </field>
        </record>


