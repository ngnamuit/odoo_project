<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="survey_form_inherit" model="ir.ui.view">
            <field name="name">survey_form</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='description']" position="after">
                    <page name="survey_done" string="Survey Done">
                        <field name="survey_done" nolabel="1"/>
                    </page>
                </xpath>
                <xpath expr="//notebook/page[@name='options']/group[@name='options']" position="inside">
                    <group string="Submitted Survey PDF" name="pdf">
                        <field name="pdf_footer" widget="image"/>
                        <field name="pdf_header" widget="image"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
