<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template section -->
    <data noupdate="1">
        <record id="email_template_hr_stage_screen" model="mail.template">
            <field name="name">Screen State Email Template</field>
            <field name="model_id" ref="candex_hr.model_hr_applicant"/>
            <field name="subject"></field>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="partner_to">${object.email_from}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="email_template_hr_stage_first_interview" model="mail.template">
            <field name="name">First Interview State Email Template</field>
