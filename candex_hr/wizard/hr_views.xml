<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="hr_popup_move_state_view_form" model="ir.ui.view">
            <field name="name">hr.popup.move.state</field>
            <field name="model">hr.popup</field>
            <field name="arch" type="xml">
                <form string="Popup">
                    <group>
                        <field name="survey_link" string="Need to do survey"
                               widget="url" readonly="1" attrs="{'invisible':[('survey_link', '==', False)]}"/>
                    </group>
                    <group class="oe_title">
                        <field name="next_meeting_date" required="1" widget="datetime"/>
                        <field name="user_ids" string="Next Hiring Managers" widget="many2many_tags" required="1"/>
                    </group>
                    <footer>
                        <button name="action_move_state_confirm" string="Submit" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_popup_move_state_view_action" model="ir.actions.act_window">
            <field name="name">Move State Confirmation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.popup</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_popup_move_state_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>
