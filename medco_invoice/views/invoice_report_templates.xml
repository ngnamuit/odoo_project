<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="medco_report_invoice_document_inherit_sale" inherit_id="account.report_invoice_document">
        <xpath expr="//table/thead/tr/th[@name='th_priceunit']" position="replace"/>
        <xpath expr="//table/thead/tr/th[@name='th_taxes']" position="replace">
            <th name="price_usd" class="text-right"><span>Amount (USD)</span></th>
        </xpath>
        <xpath expr="//table/thead/tr/th[@name='th_subtotal']" position="replace">
            <th name="th_subtotal" class="text-right">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount (VND)</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
            </th>
        </xpath>

        <xpath expr="//t[@t-foreach='lines']" position="replace">
            <t t-set="subtotal_price_usd" t-value="0" />
            <t t-set="total_tax_price_usd" t-value="0" />
            <t t-foreach="lines" t-as="line">
                <t t-set="subtotal_price_usd" t-value="subtotal_price_usd + (line.price_usd * line.quantity)" />
                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                        <td name="account_invoice_line_name">
                            <span t-field="line.product_id.name" t-options="{'widget': 'text'}"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.quantity"/>
                        </td>
<!--                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">-->
<!--                            <span class="text-nowrap" t-field="line.price_unit"/>-->
<!--                        </td>-->
                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span class="text-nowrap" t-field="line.discount"/>
                        </td>
                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span class="text-nowrap" t-esc="line.price_usd*line.quantity" style="padding-right:10px"/>
                        </td>
                        <td class="text-right o_price_total">
                            <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                        </td>
                    </t>
                    <t t-if="line.display_type == 'line_section'">
                        <td colspan="99">
                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                        </td>
                        <t t-set="current_section" t-value="line"/>
                        <t t-set="current_subtotal" t-value="0"/></t>
                    <t t-if="line.display_type == 'line_note'">
                        <td colspan="99">
                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                        </td>
                    </t>
                </tr>
            </t>
        </xpath>

        <xpath expr="//div[@id='total']/div" position="replace">
            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
            <t t-set="subtotal_price_usd" t-value="0" />
            <t t-set="total_tax_price_usd" t-value="0" />
            <t t-foreach="lines" t-as="line">
                <t t-set="subtotal_price_usd" t-value="subtotal_price_usd + (line.price_usd * line.quantity)" />
            </t>
            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
               <table class="table table-sm" style="page-break-inside: avoid;">
                  <tr class="border-black o_subtotal" style="">
                     <td><strong>Subtotal</strong></td>
                      <td class="text-right">
                        <span class="text-nowrap" t-esc="subtotal_price_usd" t-options='{"widget": "monetary", "display_currency": o.currency_usd_id}'/>
                      </td>
                     <td class="text-right">
                        <span t-field="o.amount_untaxed"/>
                     </td>
                  </tr>
                   <!--  region for tax   -->
                   <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                     <tr style="color: red">
                        <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                           <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                            <td class="text-right o_price_total_usd">
                              <span class="text-nowrap" t-esc="subtotal_price_usd*0.1" t-options='{"widget": "monetary", "display_currency": o.currency_usd_id}'/>
                           </td>
                           <td class="text-right o_price_total">
                              <span class="text-nowrap" t-esc="amount_by_group[3]" />
                           </td>

                        </t>
                        <t t-else="">
                           <td>
                              <span t-esc="amount_by_group[0]"/>
                              <span class="text-nowrap">
                                 on
                                 <t t-esc="amount_by_group[4]"/>
                              </span>
                           </td>
                           <td class="text-right o_price_total">
                              <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                           </td>
                        </t>
                     </tr>
                  </t>
                   <!--  endregion for tax   -->
                  <!--<t t-if="print_with_payments">
                     <t t-if="o.payment_state != 'invoicing_legacy'">
                        <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                        <t t-foreach="payments_vals" t-as="payment_vals">
                           <tr>
                              <td>
                                 <i class="oe_form_field text-right oe_payment_label">
                                    Paid on
                                    <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/>
                                 </i>
                              </td>
                              <td class="text-right">
                                 <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                              </td>
                           </tr>
                        </t>
                        <t t-if="len(payments_vals) > 0">
                           <tr class="border-black">
                              <td><strong>Amount Due</strong></td>
                              <td class="text-right">
                                 <span t-field="o.amount_residual"/>
                              </td>
                           </tr>
                        </t>
                     </t>
                  </t>-->
                  <tr class="border-black o_total">
                      <td><strong>Total</strong></td>
                      <td class="text-right">
                          <span class="text-nowrap" t-esc="(subtotal_price_usd * 110) / 100" t-options='{"widget": "monetary", "display_currency": o.currency_usd_id}'/>
                      </td>
                     <td class="text-right">
                        <span class="text-nowrap" t-field="o.amount_total"/>
                     </td>
                  </tr>
                   <tr>
<!--                       <td colspan="3">(Exchange rate: <span t-esc="'{:,.0f}'.format(lines and (lines[0].price_unit/lines[0].price_usd) or o.currency_usd_id.rate)"/> VND/USD)</td>-->
                         <td colspan="3">(Exchange rate: <span t-esc="'{:,.0f}'.format(o.exchange_rate)"/> VND/USD)</td>
                   </tr>
               </table>
            </div>
        </xpath>

    </template>

    <template id="external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[@name='company_address']" position="replace">
            <div class="col-6" name="company_address">
                <div>
                    <span t-esc="company.name"/><br/>
                    <span t-esc="company.partner_id.street"/><br/>
                    <span t-esc="company.partner_id.street2"/> <span t-esc="company.partner_id.city"/><br/>
                    <span t-esc="company.partner_id.state_id and company.partner_id.state_id.name or ''"/>
                    <span t-esc="company.partner_id.country_id and company.partner_id.country_id.name or ''"/>
                </div>
            </div>
            <div class="col-6" name="shipping_info">
                <div groups="sale.group_delivery_invoice_address" name="shipping_address_block">
                    <div>
                       <span t-esc="o.partner_id.name"/><br/>
                       <span t-esc="o.partner_shipping_id.name"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="medco_report_invoice_document_inherit_sale_inherit" inherit_id="sale.report_invoice_document_inherit_sale">
        <xpath expr="//t[@t-set='information_block']" position="replace" />
        <xpath expr="//div[@t-field='o.partner_id']" position="replace" />
    </template>
</odoo>
