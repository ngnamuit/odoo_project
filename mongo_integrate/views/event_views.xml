<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--   REGION FOR EVENTS LOGS     -->
        <record id="change_event_log_form_view" model="ir.ui.view">
            <field name="name">Event Logs Form</field>
            <field name="model">change.event.log</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                        <button name="process_event_logs" string="Process Logs" type="object" class="oe_highlight" />
                    </header>
                    <sheet readonly="1">
                        <group>
                            <group  colspan="4" string="Oplog Information">
                                <group>
                                    <field name="oplog_id"/>
                                    <field name="ts"/>
                                    <field name="prevOpTime"/>
                                </group>
                                <group >
                                    <field name="mongo_name_space"/>
                                    <field name="type"/>
                                    <field name="mongo_document_id"/>
                                </group>
                            </group>
                            <group  colspan="4" string="Event log">
                                <field name="change_event_values"/>
                                <field name="full_oplog"/>
                                <field name="error_msg"/>
                            </group>
                            <group colspan="4" string="Postgres Information">
                                <group>
                                    <field name="mapping_id"/>
                                    <field name="sql_executed"/>
                                </group>
                                <group>
                                    <field name="res_id"/>
                                </group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="change_event_log_tree_view" model="ir.ui.view">
            <field name="name">Event Logs Tree</field>
            <field name="model">change.event.log</field>
            <field name="arch" type="xml">
                <tree string="Event Logs" create="false" delete="true">
                    <field name="oplog_id" />
                    <field name="ts"/>
                    <field name="mongo_document_id" />
                    <field name="mongo_name_space" />
                    <field name="type" />
                    <field name="status" />
                </tree>
            </field>
        </record>


        <!--  REGION FOR MODEL MAPPING      -->
        <record id="model_mapping_tree_view" model="ir.ui.view">
            <field name="name">Model Mapping Tree</field>
            <field name="model">model.mapping</field>
            <field name="arch" type="xml">
                <tree string="Model Mappings">
                    <field name="name" />
                    <field name="mongo_database"  string="Mongo Database Name"/>
                    <field name="collection_name" string="Mongo Collection Name"/>
                    <field name="option" />
                    <field name="is_executed" string="Is Executed SQL"/>
                </tree>
            </field>
        </record>

        <record id="model_mapping_form_view" model="ir.ui.view">
            <field name="name">Model Mapping Form</field>
            <field name="model">model.mapping</field>
            <field name="arch" type="xml">
                <form string="Model Mappings">
                    <header>
                        <button name="action_create_new_table" string="Run SQL" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('option', '=', 'active'), ('is_executed', '=', True)]}"/>
                        <field name="option" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <h1><field name="name" placeholder="Model Mapping Name"/></h1>
                        <group>
                            <field name="mongo_database" required="1" string="Mongo Database Name"/>
                            <field name="collection_name" required="1" string="Mongo Collection Name"/>
                        </group>
                        <group>
                            <field name="postgres_table_name" required="1"/>
                            <field name="fields_mapping" required="1"/>
                        </group>
                        <group>
                            <field name="create_table" required="1"/>
                            <field name="sql_execute" attrs="{'readonly': [('is_executed', '=', True)], 'invisible': [('create_table', '=', 'no')]}"/>
                            <field name="is_executed" string="Is Executed SQL" attrs="{'invisible': [('create_table', '=', 'no')] }" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
