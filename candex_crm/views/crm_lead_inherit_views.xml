<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Partner Form View-->
		<record id="candex_view_crm_lead_opportunity_form" model="ir.ui.view">
            <field name="name">candex.crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form string="Partners">
                        <sheet>
                            <group>
                                <group>
                                    <field name="title_name" placeholder="Name Title" default_focus="1"/>
                                    <field name="first_name"  placeholder="First Name" required="1" />
                                    <field name="last_name"  placeholder="Last and Middle Name" required="1" />
                                    <field name="email" widget="email" />
                                    <field name="phone" widget="phone" />
                                    <field name="function" placeholder="e.g. Sales Director" />
                                </group>
                                <group>
                                    <field name="function" placeholder="e.g. Sales Director" />
                                    <field name="title" placeholder="e.g. Sales Director" />
                                    <field name="company_name"/>
                                    <field name="lifecycle_stage"/>
                                    <field name="last_contacted"/>
                                </group>
                            </group>
                            <notebook colspan="4">
                                <page string="Tab Activity">
                                    <field name="lead_activities">
                                        <tree>
                                            <field name="contact_id" />
                                            <field name="content" />
                                            <field name="platform" />
                                            <field name="source" />
                                            <field name="type" />
                                            <field name="create_date" />
                                        </tree>
                                    </field>
                                </page>
                                <page string="Tab History">
                                    <field name="history_ids">
                                        <tree>
                                            <field name="author_id" string="By User"/>
                                            <field name="create_date" />
                                            <field name="body" string="Content"/>
                                            <field name="message_type" />
                                            <field name="res_id" string="Ref ID"/>
                                            <field name="attachment_ids" widget="many2many_binary" readonly="1"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </form>
                </xpath>
            </field>
        </record>

	<!-- Partner Tree View-->
	<record id="candex_view_crm_lead_opportunity_tree" model="ir.ui.view">
		<field name="name">candex.crm.lead.tree</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Contacts">
                        <field name="title_name" />
                        <field name="first_name" />
                        <field name="last_name" />
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="function" />
                        <field name="title" />
                        <field name="company_id" />
                        <field name="lifecycle_stage" />
                        <field name="last_contacted" />
                    </tree>
                </xpath>
            </field>
	</record>
</odoo>